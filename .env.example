# =============================================================================
# Argus PR Reviewer â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values you need.
# Only the variables relevant to your provider are required.

# -----------------------------------------------------------------------------
# GitHub (required for the action)
# -----------------------------------------------------------------------------
GITHUB_TOKEN=
GITHUB_REPOSITORY=owner/repo
GITHUB_EVENT_PATH=/path/to/event.json

# -----------------------------------------------------------------------------
# LLM Provider API Keys (set the one matching your model)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Action Inputs (all optional, defaults shown)
# -----------------------------------------------------------------------------
INPUT_MODEL=anthropic:claude-sonnet-4-5-20250929
INPUT_MAX_TOKENS=128000
INPUT_TEMPERATURE=0.0
INPUT_CONFIDENCE_THRESHOLD=0.7
INPUT_IGNORED_PATHS=
INPUT_STORAGE_DIR=.argus-artifacts
INPUT_ENABLE_AGENTIC=false

# -----------------------------------------------------------------------------
# Local / OpenAI-compatible provider (LM Studio, vLLM, Ollama, etc.)
# -----------------------------------------------------------------------------
# OPENAI_BASE_URL=http://localhost:1234/v1
# OPENAI_API_KEY=lm-studio

# -----------------------------------------------------------------------------
# Smoke Tests
# -----------------------------------------------------------------------------
# LOCAL_MODEL=qwen/qwen3-coder-30b
# LOCAL_BASE_URL=http://localhost:1234/v1
